generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Task {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  date      String
  startTime String
  endTime   String
  createdAt DateTime @default(now())
}

model Holiday {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  date      String
  title     String
  createdAt DateTime @default(now())
}
